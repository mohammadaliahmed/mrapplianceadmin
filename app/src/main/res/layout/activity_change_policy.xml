<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:text="Edit Terms and conditions" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="5"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/privacyUrl"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="4"
                            android:hint="Url"
                            android:lines="1"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/updatePrivacyUrl"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_blue_bg"
                            android:inputType="text"
                            android:text="Update url"
                            android:textColor="#fff"
                            android:textSize="11sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/choosePrivacyFile"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_blue_bg"
                        android:inputType="text"
                        android:text="Pick File"
                        android:textColor="#fff"
                        android:textSize="12sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:text="Edit About Us" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="5"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/aboutUsUrl"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="4"
                            android:hint="Url"
                            android:lines="1"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/updateAboutUsUrl"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_blue_bg"
                            android:inputType="text"
                            android:text="Update url"
                            android:textColor="#fff"
                            android:textSize="11sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/chooseAboutUsFile"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_blue_bg"
                        android:inputType="text"
                        android:text="Pick File"
                        android:textColor="#fff"
                        android:textSize="12sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:text="Edit ratelist" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="5"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/ratelistUrl"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="4"
                            android:hint="Url"
                            android:lines="1"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/updateratelistUrl"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_blue_bg"
                            android:inputType="text"
                            android:text="Update url"
                            android:textColor="#fff"
                            android:textSize="11sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/chooseratelistFile"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_blue_bg"
                        android:inputType="text"
                        android:text="Pick File"
                        android:textColor="#fff"
                        android:textSize="12sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:text="Edit Service Area" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="5"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/serviceAreaUrl"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="4"
                            android:hint="Url"
                            android:lines="1"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/updateserviceAreaUrl"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_blue_bg"
                            android:inputType="text"
                            android:text="Update url"
                            android:textColor="#fff"
                            android:textSize="11sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/chooseserviceAreaFile"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_blue_bg"
                        android:inputType="text"
                        android:text="Pick File"
                        android:textColor="#fff"
                        android:textSize="12sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:text="Edit FAQs" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="5"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/faqsUrl"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="4"
                            android:hint="Url"
                            android:lines="1"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/updatefaqsUrl"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_blue_bg"
                            android:inputType="text"
                            android:text="Update url"
                            android:textColor="#fff"
                            android:textSize="11sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/choosefaqsFile"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_blue_bg"
                        android:inputType="text"
                        android:text="Pick File"
                        android:textColor="#fff"
                        android:textSize="12sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/wholeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="#fff">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>
</RelativeLayout>
